{
  "name": "mental_maze_puzzler",
  "version": "0.0.1",
  "description": "Generates a puzzle based on the thread or tweet it was tagged on.",
  "category": "agent",
  "tags": ["twitter", "x", "puzzle", "game"],
  "details": {
    "agent": {
      "defaults": {
        "model": "llama-v3p1-70b-instruct",
        "model_provider": "fireworks",
        "model_temperature": 1.0,
        "model_max_tokens": 16384
      }
    },
    "triggers": {
      "events": {
        "x_mentions": ["@0xarize"]
      }
    }
  },
  "show_entry": true
}
